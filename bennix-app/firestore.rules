rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Allow anyone to read (needed for the public app)
      allow read: if true;
      
      // Deny all writes (secure mode)
      // Note: You must temporarily change this to 'true' if you need to run the seed script again.
      allow write: if false;
    }
  }
}
